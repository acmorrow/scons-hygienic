Import('env')

env.AppendUnique(
    LIBPATH='$PREFIX/lib'
)

env.SConscript(
    dirs=[
        'base',
        'derived',
    ]
    exports={
        'env' : env
    }
)

main = env.Program(
    target='main',
    source=[
        'main.cpp',
    ],
    LIBS=[
        'base',
        'derived',
    ]
)

installMain = env.Install('$PREFIX/bin', main)
env.Alias('install-bins', installMain)
